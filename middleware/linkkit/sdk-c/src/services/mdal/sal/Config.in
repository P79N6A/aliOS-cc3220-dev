config AOS_NETWORK_SAL
    bool
    default y if BSP_SUPPORT_EXTERNAL_MODULE

config AOS_COMP_SAL
    bool
    depends on AOS_NETWORK_SAL
    default y
    select AOS_COMP_SAL_MODULE_gt202 if BSP_EXTERNAL_WIFI_MODULE = "wifi.gt202"
    select AOS_COMP_DEVICE_SAL_MK3060 if BSP_EXTERNAL_WIFI_MODULE = "wifi.mk3060"
    select AOS_COMP_DEVICE_SAL_ESP8266 if BSP_EXTERNAL_WIFI_MODULE = "wifi.esp8266"
    select AOS_COMP_DEVICE_SAL_BK7231 if BSP_EXTERNAL_WIFI_MODULE = "wifi.bk7231"
    select AOS_COMP_DEVICE_SAL_SIM800 if BSP_EXTERNAL_GPRS_MODULE = "gprs.sim800"
